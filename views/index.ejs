        <section>
        <h1>Add new product</h1>
        
        <!-- (1): CREATE Task -->         
        <!-- --> 
        <div class="input">
        <form action="/quotes" method="POST">  
            
            <input type="number" placeholder="ID" required name="STT" />     
            <input type="text" placeholder="name" required name="name" />        
            <input type="text" placeholder="price" required name="price" />
            <input type="file" placeholder="image" required name="image">
            <button type="submit">Submit</button>
        </form>
        </div>
        <!-- -->                               

        <!-- (2) READ Task -->                        
        <h2> Table product </h2>
            <!-- Loop through quotes -->
                    <table class="tb">
                        <thead >
                            <th >Id</th>
                            <th >Name</th>
                            <th >Price</th>
                            <th >Image</th>
                            <th >Actions</th>
                        </thead>
                        <tbody>
                                <% for(let i = 0; i < quotes.length; i++) {%>
                                    <tr>
                                        <td><span><%= quotes[i].STT %></span></td>
                                        <td><span><%= quotes[i].name %></span></td>
                                        <td><span><%= quotes[i].price %></span></td>
                                        <td><img src="<%= quotes[i].image %>" alt="Quote Image" width="50px" height="50px"></td>
                                        <td><a href="/" id="update-button"><i class="fa fa-edit" title="EDIT"></i></a>
                                            <button type="submit" value="<%= quotes[i].name %>" id="delete-button"><i class="fa fa-trash" title="DELETE"></i></button></td>
                                    </tr>
                                <% } %> 
                        </tbody>
                    </table>   

